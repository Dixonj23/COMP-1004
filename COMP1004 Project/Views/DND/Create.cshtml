@model CustomViewModel


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create2" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Character.Name" class="control-label"></label>
                <input asp-for="Character.Name" class="form-control" />
                <span asp-validation-for="Character.Name" class="text-danger"></span>
            </div>
            <div class="form-group">

                
                <div class="form-group">
                    <label asp-for="Character.Race" class="control-label"></label>
                    <div>
                        <div class="container-fluid padding">
                            <div class="card-deck">
                                @foreach (var item in Model.Races)
                                {
                                    <div class="card bg-secondary shadow-lg" style="width:18rem;">
                                        <div class="card-columns">
                                            <h4 class="card-title">
                                                <label><input asp-for="Character.Race" value="@item.Name" type="radio" />@item.Name</label>

                                            </h4>
                                            
                                        </div>
                                        <div class="card-footer text-muted">
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        </div>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
