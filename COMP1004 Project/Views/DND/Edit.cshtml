@model COMP1004_Project.Models.Character

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Character</h4>
<hr />



<form asp-action="Edit" class="charsheet">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <header>
        <section class="charname">
            <label asp-for="Name">Character Name</label><input asp-for="Name" placeholder="Thoradin Fireforge"  />
            <span asp-validation-for="Name" class="text-danger"></span>
        </section>
        <section class="misc">
            <ul>
                <li>
                    

                    <label for="ClassLevel">Class & Level</label><input name="ClassLevel" placeholder="Paladin 2" value="@Model.Classes @Model.Level"/>

                    <input asp-for="Classes" type="hidden"/>
                    <input asp-for="Level" type="hidden" />
                </li>
                <li>
                    <label asp-for="Race">Race</label><input asp-for="Race" placeholder="Half-elf" />
                </li>
            </ul>
        </section>
    </header>
    <input asp-for="Image" class="form-control" type="hidden" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>








<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

