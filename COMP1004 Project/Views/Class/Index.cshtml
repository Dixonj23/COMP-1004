@model IEnumerable<COMP1004_Project.Models.Class>

@{
    ViewData["Title"] = "Index";
}


<!-- A view to show instances of the class model using the Index asp action created in the class controller.
It utilises cards to show a simple overview of each class instance.
--!>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div class="card-columns">
    @foreach (var item in Model)
    {

        <div class="card">
            <div class="card-body">

                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>

        </div>
    }
</div>